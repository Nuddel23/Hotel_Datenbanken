<Page x:Class="Hotel_Datenbanken.Zimmer_Buchen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Hotel_Datenbanken"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Zimmer_Buchen">

    <Grid>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top">
            <TextBox Text="Zimmer Buchen" Width="100" />
            <ComboBox Name="combobox" SelectionChanged="combobox_SelectionChanged" Width="100"/>
        </StackPanel>
        <DataGrid Name="tabelle" Margin="0,50,0,0"/>
    </Grid>
</Page>
